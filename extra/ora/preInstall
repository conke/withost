#!/bin/sh

if [ $UID != 0 ]; then
	echo  "must run as root!"
	echo
	exit 1
fi

yum install -y compat-libcap1 compat-libstdc++-33 compat-libstdc++-33 gcc gcc-c++ glibc glibc-devel ksh libgcc libstdc++ libstdc++-devel libaio libaio-devel libXext libXtst libX11 libXau libxcb libXi make sysstat pam xorg-x11-xauth unixODBC

groupadd oinstall
groupadd dba
useradd -g oinstall -G dba,wheel ora

pass="maxwit"
echo -e "$pass\n$pass" | passwd ora

echo
echo "please re-login as 'ora'!"
echo
